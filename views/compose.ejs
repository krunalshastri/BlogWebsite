<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label for="newTop">Title</label>
    <input type="text" class="form-control" name="newTitle" id="newTop">
  </div>

  <div class="form-group">
    <label for="newPost">Post</label>
    <textarea name="newContent" class="form-control" id="newPost" rows="5" cols="30"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>

